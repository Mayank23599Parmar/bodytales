{% if settings.coupon_popup_title != blank %}
  <div class="coupon-code-popup-backdrop"></div>
  <div class="coupon-code-popup">
    <div class="coupon-code-popup-wrapper">
      <div class="close-popup">
        <svg class="Bz112c Bz112c-r9oPif" xmlns="https://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#5f6368">
          <path
              d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z">
          </path>
          <path fill="none" d="M0 0h24v24H0z"></path>
        </svg>
      </div>
      <div class="coupon-code-popup-body">
        <div class="image-wrapper">
          <img src="{{settings.coupon_popup_image | img_url :'master'}}">
        </div>
        <div class="text-wrapper">
          <h3 class="title">{{ settings.coupon_popup_title }}</h3>
          <div class="subtitle">
            <p>{{ settings.coupon_popup_subtitle }}</p>
          </div>
          <div class="coupon_popup_text">
            <p>{{ settings.coupon_popup_text }}</p>
          </div>
          <div class="timer-countdown">
            <h4>15m 0s</h4>
          </div>
        </div>
      </div>
      <div class="coupon-code-popup-footer">
        <div class="coupon-code-wrapper">
          <div class="coupon-code">
            <h4>{{ settings.coupon_code }}</h4>
            <div class="copy-code-icon">
              <img
                src="https://cdn.shopify.com/s/files/1/0692/4288/0277/files/copy.png?v=1674244984"
                alt="copy coupon code"
              >
            </div>
          </div>
          <div class="copy-text">
            <p>Click to copy code</p>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
